@page
@model RegisterModel
@using EkkoSoreeg.Utilities

@{
    ViewData["Title"] = "Register";
}
<style>
    .imagediv {
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .loginimg {
        height: auto;
        max-width: 100%;
        margin: auto;
    }

    .formgh {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    form h2 {
        margin-bottom: 20px;
    }

    .form-floating {
        position: relative;
        margin-bottom: 15px;
    }

        .form-floating input {
            height: 50px;
            padding: 10px 15px;
            padding-right: 50px;
            width: 100%;
            box-sizing: border-box;
        }

        .form-floating .input-container {
            position: relative;
            height: 100%;
        }

        .form-floating .toggle-password {
            position: absolute;
            bottom: 50%;
            right: 15px;
            transform: translateY(50%);
            cursor: pointer;
            font-size: 18px;
            color: #6c757d;
        }

        .form-floating .error-message {
            margin-top: 5px;
        }

    .btn-primary {
        background-color: #717FE0;
        border-color: #717FE0;
        transition: background-color 0.3s, border-color 0.3s;
        border-radius: 23px;
    }

        .btn-primary:hover {
            background-color: #666666;
            border-color: #666666;
        }

    .form-radio-group {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .form-radio-group input[type="radio"] {
            margin-right: 5px;
        }

        .form-radio-group label {
            margin-right: 20px;
            margin-bottom: 0px !important;

        }
</style>
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <form class="formgh" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Create a new account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="First Name" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="Last Name" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <div class="input-container">
                            <input asp-for="Input.Password" id="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <span class="toggle-password" id="toggle-password">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <div class="input-container">
                            <input asp-for="Input.ConfirmPassword" id="confirm-password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <span class="toggle-password" id="toggle-confirm-password">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    @if (User.IsInRole(SD.AdminRole))
                    {
                        <div class="form-radio-group">
                            <input type="radio" name="Rolebtn" value="@SD.AdminRole" id="role-admin" />
                            <label for="role-admin">@SD.AdminRole</label>
                            <input type="radio" name="Rolebtn" value="@SD.CustomerRole" id="role-customer" />
                            <label for="role-customer">@SD.CustomerRole</label>
                            <input type="radio" name="Rolebtn" value="@SD.EditorRole" id="role-editor" />
                            <label for="role-editor">@SD.EditorRole</label>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create New User</button>
                    }
                    else
                    {
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                        <div class="mt-3">
                            <p>
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">You Already Have Account?</a>
                            </p>
                        </div>
                    }
                </form>
            </div>
            <div class="col-md-6 d-none d-md-flex align-items-center">
                <div class="imagediv">
                    <img class="loginimg" src="~/Customer/images/usermanage.png" alt="Login Illustration" />
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const togglePassword = document.getElementById('toggle-password');
            const passwordField = document.getElementById('password');
            const toggleConfirmPassword = document.getElementById('toggle-confirm-password');
            const confirmPasswordField = document.getElementById('confirm-password');

            togglePassword.addEventListener('click', () => {
                // Toggle the type attribute for the password field
                const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', type);

                // Toggle the eye icon
                togglePassword.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
            });

            toggleConfirmPassword.addEventListener('click', () => {
                // Toggle the type attribute for the confirm password field
                const type = confirmPasswordField.getAttribute('type') === 'password' ? 'text' : 'password';
                confirmPasswordField.setAttribute('type', type);

                // Toggle the eye icon
                toggleConfirmPassword.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
            });
        });
    </script>

}
