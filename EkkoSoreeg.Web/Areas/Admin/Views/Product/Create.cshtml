@model ProductVM
@{
    ViewBag.pageTitle = "Product Management";
    ViewBag.CardTitle = "Create Product";
}
<section class="section">
      <div class="row">
        <div class="col-lg-9">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">@ViewBag.CardTitle</h5>
              <!-- General Form Elements -->
              <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Name</label>
                  <div class="col-sm-10">
                    <input asp-for="Product.Name" type="text" class="form-control">
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                  </div>
                </div>

                <div class="row mb-3">
                     <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Product.Description" class="form-control" style="height: 100px"></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="Product.Price" type="text" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="file" name="file" id="imagefile" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Catagory</label>
                    <div class="col-sm-10">
                        <select class="form-select" asp-for="Product.CatagoryId" asp-items="Model.CatagoryList">
                            <option selected>Select Category</option>
                        </select>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" asp-action="Create" class="btn btn-success m-2 px-4">Save</button>
                    <button type="reset" class="btn btn-secondary m-2 px-4">Reset</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
