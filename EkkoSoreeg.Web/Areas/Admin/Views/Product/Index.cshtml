@model IEnumerable<Product>
@{
    ViewBag.pageTitle = "Product Management";
    ViewBag.CardTitle = "View Product";
}

<a asp-controller="Product" asp-action="Create" class="btn btn-primary">New Product</a>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <table class="table datatable" id="mytable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Create Date</th>
                                <th>Category</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                     </table>
                </div>
            </div>

        </div>
    </div>
</section>
@section Scripts {
    <script src="~/Dashboard/js/Product.js"></script>
}